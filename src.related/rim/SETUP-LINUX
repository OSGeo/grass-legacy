# setup src for LINUX
cp LINUX-DGUX/*.[cdf] src
rm -f Makefile
cat <<endmake >Makefile
# definitions for LINUX rim
RANLIB=ranlib
F2CLIB=/usr/lib/f2cmain.a -lf2c
EXTRA=time_date.o
LIBEXTRA=time_date.o
PILE = CC_f2c=\$(CC) g77
LIBRIM=librim.a
AR = ar rv
RAN = ranlib
endmake

cp Makefile src
cat MAKEFILE >>Makefile

cat src/MAKEFILE >>src/Makefile
