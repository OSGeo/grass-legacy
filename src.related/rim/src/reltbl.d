      COMMON /RELTBL/ RELBUF(ZF1),
     X CNAME,LRROW,NRROW,RELMOD,RPBUF
      INTEGER RELBUF
      INTEGER CNAME(Z)
      INTEGER RELMOD
      INTEGER RPBUF
      INTEGER RELTBL(ZRELL,ZRELR)
