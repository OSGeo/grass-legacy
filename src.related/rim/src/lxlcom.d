C
C *** / L X L C O M / ***
C
C  INTERNAL PARAMETERS USED BY INPUT PARSERS
C
C     THESE ARE ALL ASCII-CHARS.  THE VARIABLES ARE USER CONTROLLED.
C
      PARAMETER (ASPACE=32)
      PARAMETER (LA=97,LZ=122,UA=65,UZ=90,USCOR=95,
     1   UECH=69,LECH=101)
      PARAMETER (U0=48,U9=57,PLSIGN=43,MNSIGN=45,DECIM=46,
     1   TMSIGN=42,DVSIGN=47,
     1   ATSIGN=64,PCSIGN=37,
     2   EQSIGN=61,GTSIGN=62,LTSIGN=60,SQUOTE=39,DQUOTE=34)
      PARAMETER (ASSTAR=42,ASPCNT=37)
      PARAMETER (ASCOLN=58)
      PARAMETER (ASRCLL=82,ASCLC=67,ASLXEI=60,ASLXEE=62,
     1           ASLXEX=33,ASLXES=35)
C
      COMMON /LXLCOM/ ASXXXX,ASBLK,ASCOM,ASSEMI,ASDOL,
     +  ASPLUS,ASQUO,ASLPAR, ASRPAR, ASXXX
C
C  VARIABLE DEFINITIONS
C         ASBLK---FIELD SEPERATOR (MANY = 1)
C         ASCOM---FIELD SEPERATOR (MANY = MANY)
C         ASSEMI--RECORD DELIMITER
C-----C   ASDOL---RECORD DELIMITER (ARCHAIC)
C         ASPLUS--LINE CONTINUATION CHARACTER
C         ASQUO---STRING DELIMITER  (' OR ")
C         ASLPAR--LEFT PARENTHESIS
C         ASRPAR--RIGHT PARENTHESIS
C         ASPCNT--PERCENT SIGN
C
C         ASRCLL--RECALL LINE CHARACTER (R)
C         ASRCLC--RECALL COMMAND CHARACTER (RC)
C         ASLXEI--RECALL EDIT - BEGIN INSERT (>)
C         ASLXEE--RECALL EDIT - END INSERT (<)
C         ASLXEX--RECALL EDIT - END LINE (!)
C         ASLXES--RECALL EDIT - SKIP CHAR (#)
