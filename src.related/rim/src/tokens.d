C
C  *** / T O K E N S / ***
C
C  CONTAINS INPUT RECORD AS TOKENS
C
C     EACH TOKEN MAY BE ONE OR MORE OF THE FOLLOWING
C
C          KXNULL - NULL (TYPE = 0)
C          KXTEXT - TEXT
C          KXINT  - INTEGER
C          KXREAL - REAL
C          KXKEYW - KEYWORD
C          KXNAME - NAME
C
      PARAMETER (KXNULL=0, KXTEXT=1, KXINT=2, KXREAL=4,
     1  KXKEYW=8, KXNAME=16)
C
      COMMON /TOKENS/ ASCREC(ZMASC),IDT(ZMTOK),IDP(ZMTOK),
     1   IDL(ZMTOK), IDI(ZMTOK), IDR(ZMTOK), ASCNXT, ITEMS
      DOUBLE PRECISION IDR
      COMMON /TOKENC/ KWS(ZMTOK)
      CHARACTER*(ZKEYWL) KWS
C
C  VARIABLE DEFINITIONS:
C         ASCREC--ARRAY OF TOKENS AS ASCII-TEXT
C         IDT-----ARRAY OF TYPE IDENTIFIERS FOR EACH TOKEN
C         IDP-----ARRAY OF POINTERS TO REC
C         IDL-----ARRAY OF LENGTHS FOR CHARACTER DATA
C         IDI-----ARRAY OF TOKENS AS INTEGERS (OR ASCII-CHAR SYMBOLS)
C         IDR-----ARRAY OF TOKENS AS REALS
C         ASCNXT--NEXT AVAILABLE SPOT IN ASCREC
C         ITEMS---NUMBER OF TOKENS
C         KWS-----ARRAY OF TOKENS AS KEYWORDS (UPPER CASE CHAR)
C
C     TOKTYP CHECKS A TOKEN FOR A TYPE MATCH
      LOGICAL TOKTYP
