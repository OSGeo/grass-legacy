# Handle this the same
BINDIR=/usr/local/bin
#if test -z "${exec_prefix}" || test "${exec_prefix}" = "NONE"; then
#exec_prefix="/usr/local"
#fi
if test "${bindir}"; then
BINDIR="${bindir}"
fi
