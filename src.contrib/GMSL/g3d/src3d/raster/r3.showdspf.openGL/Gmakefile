MYLIBDIR = $(SRC)/libes/dspf
DSPLIB	 = $(SRC)/libes/dspf/libdsp3.a
OGSF_DIR     = $(SRC)/libes/ogsf

EXTRA_CFLAGS = -I$(MYLIBDIR) -I$(OGSF_DIR) $(OPENGLINC) $(OPENGLwINC) $(XCFLAGS)
SUNLDFLAGS   = $(XMLIBPATH) $(XLIBPATH) -L/lib
OGLLIB	     = -lGLU -lGL -lGLw ${LGLWM} -lXm -lX11 -lXt -lXext
LIBES        = $(DSPLIB) $(G3DLIB) $(DATETIMELIB) $(GISLIB)

PGM	=	$(BIN_CONTRIB_CMD)/r3.showdspf

SOURCES	=	\
                new_init_graphics.c \
		cap_data.c \
		init_caps.c \
		debugf.c \
