		r3_find.o \
                togif.o \
                Ball.o \
                BallAux.o \
                BallMath.o \
                main_ogl.o




$(PGM): $(OBJ) $(G3DLIB) $(LIBES)
	$(CC) $(LDFLAGS) -o $@ $(OBJ) $(EXTRA_CFLAGS) $(LIBES) $(OGLLIB) $(SUNLDFLAGS) $(MATHLIB) $(XDRLIB)


